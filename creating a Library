class Library:
  def __init__(self):
    self.NoBooks = 0
    self.books = []

  def AddBook(self, book):
    self.books.append(book)
    self.NoBooks = len(self.books)

  def showinfo(self):
    print(f"the library has {self.NoBooks} books and the name of books are: ")
    for book in self.books:
      print(book)

L1 = Library()
L1.AddBook("Deep work")
L1.AddBook("Harry Potter")
L1.showinfo()
